@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sign-up-page">
    <div class="container">
        <div class="sign-up-inner">
            <form class="sign-up-form">
                <div class="form-element">
                    <label for="login" class="form-element-label">Enter your login</label>
                    <input type="text" id="login" class="form-element-input"/>
                </div>
                <div class="form-element">
                    <label for="password" class="form-element-label">Enter your password</label>
                    <input type="password" id="password" class="form-element-input"/>
                </div>
                <div class="form-element">
                    <label for="repeat-password" class="form-element-label">Repeat your password</label>
                    <input type="password" id="repeat-password" class="form-element-input"/>
                </div>
                <div class="form-button-div">
                    <button class="form-button">Register</button>
                </div>
            </form>
        </div>
    </div> 
</div>

